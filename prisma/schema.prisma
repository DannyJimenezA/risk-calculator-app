generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Risk {
  id          String   @id @default(uuid())
  title       String
  description String?
  likelihood  Int
  impact      Int
  severity    Int
  band        String
  status      String   @default("Open")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
