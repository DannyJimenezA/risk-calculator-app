// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Risk {
  id          String   @id @default(uuid())
  title       String
  description String?
  likelihood  Int
  impact      Int
  severity    Int
  band        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
